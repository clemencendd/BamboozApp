<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/bambooz_orange"
        android:background="@drawable/ic_baseline_account_circle_24"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imProfile"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/bambooz_orange"
        android:text="Mon Profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/bambooz_button_round">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/label_last_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/bambooz_button_round"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_star"
            android:drawableTint="@color/black"
            android:drawablePadding="20dp"
            android:text="150 Points"/>
        <TextView
            android:id="@+id/followers"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_peoples"
            android:drawableTint="@color/black"
            android:drawablePadding="20dp"
            android:text="30 AbonnÃ©s"/>

        <TextView
            android:id="@+id/follows"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_peoples"
            android:drawableTint="@color/black"
            android:drawablePadding="20dp"
            android:text="150 Abonnements"/>
    </LinearLayout>


    </LinearLayout>

</RelativeLayout>